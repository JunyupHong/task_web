extends kakaotalk_layout

block link
    link(rel="stylesheet", type="text/css", href="/stylesheets/kakaotalk_chatting.css")
    script(src='https://www.gstatic.com/firebasejs/4.12.1/firebase.js')
    script(src="/javascripts/kakaotalk_chatting_api.js")

block chatting
    .chatting-window
        .chatting-top-bar
            .chatting-top-bar-icon
                a(href="/kakaotalk/chatting_rooms", target="_self").fas.fa-arrow-left
            .chatting-top-bar-text-zone
                .setting-top-bar-text 홍준엽
            .chatting-top-bar-icon
                a.fas.fa-search
            .chatting-top-bar-icon
                a.fas.fa-bars
        .chatting-zone#chattingZone
            .chatting-bar.send-text
                .delete-button
                    i.fas.fa-times(type='deleteButton', messageId='id')
                .chatting-bar-time-zone
                    .chatting-bar-time 오후 12:28
                .chatting-bar-text-zone
                    .chatting-bar-message-zone
                        .chatting-bar-message 가나다
            .chatting-bar.send-text
                .delete-button
                    i.fas.fa-times(type='deleteButton', messageId='id2')
                .chatting-bar-time-zone
                    .chatting-bar-time 오후 12:28
                .chatting-bar-text-zone
                    .chatting-bar-message-zone
                        .chatting-bar-message 가나다라
        .chatting-bottom-bar
            .plus-square-icon-zone
                .far.fa-plus-square
            textarea(cols=10)#messageInput
            //input(type="text")#messageInput
            .face-icon-zone
                .far.fa-smile
            .send-icon-zone#sender
                .fas.fa-paper-plane
    script(src="/javascripts/kakaotalk_chatting.js")







